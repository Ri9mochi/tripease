<div class="login-container">
  <header class="login-header">
    <div class="logo-box">
      <h1 class="service-logo">Tripease</h1>
    </div>
  </header>
  <div class="login-form-card">
    <h2 class="form-title">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を記憶する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "form-submit-button" %>
      </div>
    <% end %>

    <div class="form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>